        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\n프로그램"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스피닝, 요가, 서킷"
        android:textColor="@color/black"
        android:textSize="18sp"
        />

</LinearLayout>